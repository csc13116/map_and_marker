<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ChildConnectionActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_announcementChildConnect"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="8pt"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:text="Nhập mã để kết nối điện thoại của phụ huynh"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/ed_secretCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:hint="Mã kết nối" />

        <EditText
            android:id="@+id/ed_childConnectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:hint="Tên thiết bị" />

        <Button
            android:id="@+id/btn_childConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Kết nối "/>

        <TextView
            android:id="@+id/tv_announceWrongCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:textSize="8pt"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>